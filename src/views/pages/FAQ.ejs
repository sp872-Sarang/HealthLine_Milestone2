<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header>
    <%- include('../partials/nav') %>
  </header>

 <section class="section has-background-success">
    <div class="container">
      <div class="is-vcentered columns">
        <div class="column is-full">
          <h2 class="has-text-white has-text-centered mt-2 mb-3 is-size-1 is-size-3-mobile has-text-weight-bold">How can we help?</h2>
